{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["webpack.config.ts", "src/frontend", "node_modules"]
}
